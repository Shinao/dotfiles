rm ~/.bashrc
rm ~/.bash_aliases
rm ~/.inputrc
rm ~/.conkyrc
rm ~/.config/tint2/tint2rc
rm ~/.config/openbox/rc.xml
rm ~/.config/openbox/menu.xml
rm ~/.config/openbox/autostart

ln -s ~/dotfiles/bin ~/bin

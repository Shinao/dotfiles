# arrow up
"\e[A":history-search-backward
# arrow down
"\e[B":history-search-forward

# Because mouse are for weak
# Vimlike shortcuts
"\ej":history-search-forward
"\ek":history-search-backward
"\eh":backward-char
"\el":forward-char
"\ee": end-of-line
"\ea": beginning-of-line
"\ex": delete-char
"\eq": backward-delete-char
"\en": "\C-k\C-u"
"\em":"make re\C-m"
"\es":"\C-asudo \C-m"

# i cant believe this is not default
set blink-matching-paren on

# Insensitive case because we dont feel anything
set completion-ignore-case On

# Fuck twice key
set show-all-if-ambiguous on
